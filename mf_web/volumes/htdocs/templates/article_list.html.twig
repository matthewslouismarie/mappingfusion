{% extends 'base.html.twig' %}

{% from 'macros/article_mosaic.html.twig' import articleMosaic %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
<div class="_wrapper _flex -col _gap -gap-row-xl _padding -padding-hori-mobile -padding-vert-xl">

    <h1 class="section-heading -inline -white _text -text-xl">
        <img class="image" {{ app.imgAttr('Actualités', 'news.svg', false, 107, 103)|raw }}>
        <div class="text">
            <span class="regular">Liste des </span>
            <span class="title">actualités</span>
        </div>
    </h1>

    <ul class="std-mosaic-list">
        {% for a in articles %}
        <li class="item">{{ articleMosaic(a, app) }}</li>
        {% endfor %}
    </ul>

    <div class="_text -textcentered">
        <a class="std-button -darkblue -padded" href="{{ app.router.generateUrl('reviews') }}">
            <div class="text _text -text-m">
                <span class="bold">Retour à l’accueil</span>
            </div>
        </a>
    </div>
</div>

{% include 'sections/social-medias-all.html.twig' %}

{% include 'sections/beginners-all.html.twig' %}


{% endblock %}