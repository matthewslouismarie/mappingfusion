{% apply spaceless %}<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/public/style.css?{{ app.stylesheetVersion }}">
        <title>{% block title %}{% endblock %} - Mapping-Fusion</title>
        {% block resources %}{% endblock %}
    </head>
    <body class="site-body">
        {% if session.currentMemberUsername %}
        <nav class="site-admin-nav">
            <ul class="list">
                <li class="item">
                    <a class="link" href="{{ app.router.generateUrl('manage_account') }}">{{ session.currentMemberUsername }}</a>
                </li>
                <li class="item">
                    <a class="link" href="{{ app.router.generateUrl('admin_article_list') }}">Gérer les articles</a>
                </li>
                <li class="item">
                    <a class="link" href="{{ app.router.generateUrl('manage_author') }}">Nouvel auteur</a>
                </li>
                <li class="item">
                    <a class="link" href="{{ app.router.generateUrl('manage_playable') }}">Nouveau jeu</a>
                </li>
                <li class="item">
                    <a class="link" href="{{ app.router.generateUrl('admin_category_list') }}">Gérer les catégories</a>
                </li>
                <li class="item">
                    <a class="link" href="{{ app.router.generateUrl('logout') }}">Déconnexion</a>
                </li>
            </ul>
        </nav>
        {% endif %}

        <header class="site-section -header">
            <div class="wrapper">
                <a class="logo" href="/">
                    <img alt="Mapping-Fusion" class="img" src="/public/mapping-fusion-logo.png">
                </a>
                <div class="text">
                    <p class="intro">Communauté francophone sur l’univers d’<strong>Half-Life et le modding pour Goldsource et Source</strong>.</p>
                    <nav class="header-nav">
                        <ul class="list">
                            <li class="item">
                                <input class="search" type="search" placeholder="Votre recherche">
                            </li>
                            <li class="item">
                                <a class="link">Nouveau sur Sven Co-op ?</a>
                            </li>
                            <li class="item">
                                <a class="link">Comment installer un mod Half-Life</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>

        <main class="site-section">
            {% block body %}
            <div class="wrapper">
                {% block bodyContent %}{% endblock %}
            </div>
            {% endblock %}
        </main>

        {% block scriptInit %}{% endblock %}
    </body>
</html>
{% endapply %}