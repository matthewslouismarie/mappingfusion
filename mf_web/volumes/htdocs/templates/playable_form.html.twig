{% extends 'base.html.twig' %}

{% from 'macros/csrf_input.html.twig' import csrf %}
{% from 'macros/error_list.html.twig' import errorList %}

{% block title %}Édition de mod{% endblock %}

{% block bodyContent %}
<h1>{% if formData %}Édition de {{ formData.name }}{% else %}Nouveau jeu{% endif %}</h1>

<form class="std-form" autocomplete="on" enctype="multipart/form-data" method="post"{% if app.dev %} novalidate{% endif %}>
    <div class="_flex -col -gaps">
        <div class="form-row">
            <label class="label" for="id">ID (générée automatiquement)</label>
            <input class="input" id="id" name="id" value="{{ formData.id ?? null }}">
            {{ errorList(formErrors.id ?? null )}}
        </div>

        <div class="form-row">
            <label class="label" for="name">Nom</label>
            <input class="input" id="name" name="name" required value="{{ formData.name ?? null }}">
            {{ errorList(formErrors.name ?? null )}}
        </div>

        <div class="form-row">
            <label class="label" for="game-id">Si mod ou map, ID du jeu (laisser vide si c’est un jeu stand-alone)</label>
            <select class="input" id="game-id" name="game_id">
                <option value=""></option>
                {% for p in playables %}
                {% if formData and p.id != formData.id %}
                <option value="{{ p.id }}"{% if formData.game_id == p.id %} selected{% endif %}>{{ p.name }}</option>
                {% endif %}
                {% endfor %}
            </select>
            {{ errorList(formErrors.game_id ?? null )}}
        </div>

        <div class="form-row">
            <label class="label" for="release-date-time">Date de publication (optionnel)</label>
            <input class="input" id="release-date-time" name="release_date_time" type="datetime-local" value="{{ formData.release_date_time.format('Y-m-d H:i') ?? null }}">
            {{ errorList(formErrors.release_date_time ?? null )}}
        </div>
    </div>
    
    {% if formData %}
    {% for key, link in formData.links %}
    {{ _self.linkForm(app.linkTypes, link, formErrors.links[key] ?? [], loop.index0) }}
    {% endfor %}
    {% endif %}

    <button class="std-button -padded" data-type="add-dynamic-form" data-source="link-form-template" data-index="{{ null != formData ? formData.links|length : 0 }}" type="button">Ajouter un lien</button>

    {% if formData %}
    {% for c in formData.contributions %}
    {{ _self.contributionForm(authors, loop.index0, c) }}
    {% endfor %}
    {% endif %}
    <button class="std-button -padded" data-type="add-dynamic-form" data-source="contrib-form-tpl" data-index="{{ null != formData ? formData.contributions|length : 0 }}" type="button">Ajouter un contributeur</button>

    <div class="_text -textcentered">
        <button class="std-button -padded" type="submit">Poster</button>
    </div>

    {{ csrf(app) }}
</form>

<template id="link-form-template">
{{ _self.linkForm(app.linkTypes) }}
</template>

<template id="contrib-form-tpl">
{{ _self.contributionForm(authors, '{{ i }}') }}
</template>

<template id="link-to-remove-template">
    <input type="hidden" name="links-to-remove[]" value="${linkId}">
</template>
{% endblock %}

{% block scriptInit %}
<script src="{{ app.asset('dynamic-form.js') }}"></script>
<script>
const contribForm = new DynamicForm();
contribForm.init();
</script>
{% endblock %}

{% macro index(i) %}{{ i ?? '${index}' }}{% endmacro %}

{% macro linkForm(linkTypes, link, linkErrors, i) %}
<div class="_flex -col -gaps" data-type="dynamic-form">
    <div class="form-row">
        <label class="label" for="link-{{ _self.index(i) }}-name">Nom du lien</label>
        <input class="input" id="link-{{ _self.index(i) }}-name" name="links[{{ _self.index(i) }}][name]"{% if link %} value="{{ link.name }}"{% endif %}>
        {% if linkErrors.name is defined %}{{ errorList(linkErrors.name) }}{% endif %}
    </div>
    <div class="form-row">
        <label class="label" for="link-{{ _self.index(i) }}-url">URL du lien</label>
        <input class="input" id="link-{{ _self.index(i) }}-url" name="links[{{ _self.index(i) }}][url]"{% if link %} value="{{ link.url }}"{% endif %}>
        {% if linkErrors.url is defined %}{{ errorList(linkErrors.url) }}{% endif %}
    </div>
    <div class="form-row">
        <label class="label" for="link-{{ _self.index(i) }}-type">Type de lien</label>
        <select class="input" id="link-{{ _self.index(i) }}-type" name="links[{{ _self.index(i) }}][type]">
            {% for t in linkTypes %}
            <option value="{{ t.value }}"{% if link and link.type == t.value %} selected{% endif %}>{{ t.value }}</option>
            {% endfor %}
        </select>
        {% if linkErrors.type is defined %}{{ errorList(linkErrors.type) }}{% endif %}
    </div>
    <div class="form-row">
        <button class="stb-button" type="button" data-type="remove-dynamic-form-button">Supprimer le lien</button>
    </div>
    <input class="input" name="links[{{ _self.index(i) }}][id]" type="hidden" value="{{ link.id ?? null }}">
</div>
{% endmacro %}

{% macro contributionForm(authors, i, contribution = null, errors = null) %}
<div data-type="dynamic-form">
    <div class="form-row">
        <select id="contributions[{{ i }}][author_id]" name="contributions[{{ i }}][author_id]">
            {% for a in authors %}
            <option value="{{ a.id }}"{% if contribution and a.id == contribution.author_id %} selected{% endif %}>{{ a.name }}</option>
            {% endfor %}
        </select>
        {% if errors %}{{ errorList( errors.author_id) }}{% endif %}
    </div>

    <div class="form-row -checkbox">
        <input class="input" id="contributions[{{ i }}][is_author]" name="contributions[{{ i }}][is_author]" type="checkbox"{% if contribution and contribution.is_author %} checked{% endif %}>
        <label class="label" for="contributions[{{ i }}][is_author]">Auteur</label>
        {% if errors %}{{ errorList( errors.is_featured) }}{% endif %}
    </div>

    <div class="form-row">
        <label class="label" for="contributions[{{ i }}][summary]">Résumé</label>
        <input class="input" id="contributions[{{ i }}][summary]" name="contributions[{{ i }}][summary]"{% if contribution %} value="{{ contribution.summary }}"{% endif %}>
        {% if errors %}{{ errorList(errors.summary) }}{% endif %}
    </div>

    <div class="form-row">
        <button class="std-button -padded" data-type="remove-dynamic-form-button" type="button">
            <div class="text">Supprimer</div>
        </button>
    </div>
    <input type="hidden" name="contributions[{{ i }}][id]" value="{{ contribution.id ?? null }}">
</div>
{% endmacro %}