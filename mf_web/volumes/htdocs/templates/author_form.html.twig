{% extends 'base.html.twig' %}

{% block title %}Édition d’auteur{% endblock %}

{% block bodyContent %}
<form autocomplete="on" class="std-form" enctype="multipart/form-data" method="post">
    <div class="form-row">
        <label class="label" for="p-id">ID (générée automatiquement)</label>
        <input class="input" id="p-id" name="author_id"{% if author %} value="{{ author['author_id'] }}"{% endif %}>
    </div>
    <div class="form-row">
        <label class="label" for="p-name">Nom</label>
        <input class="input" id="p-name" name="author_name" required{% if author %} value="{{ author['author_name'] }}"{% endif %}>
    </div>
    <button type="submit">Poster</button>
</form>
{% endblock %}