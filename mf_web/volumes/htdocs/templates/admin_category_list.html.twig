{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block index %}<meta name="robots" content="noindex">{% endblock %}

{% block bodyContent %}
<h1 class="_h1">Liste des catégories</h1>

<a class="std-button _std" href="{{ app.router.generateUrl('admin-manage-category') }}">Créer une nouvelle catégorie</a>

<ul class="std-list _std">
    {% for c in categories %}
    <li class="item">
        <a class="std-link" href="{{ app.router.generateUrl('admin-manage-category', {id: c.id}) }}">{{ c.name }}</a>
    </li>
    {% endfor %}
</ul>
{% endblock %}