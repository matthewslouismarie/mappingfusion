{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<article class="std-article">
    <div class="blue">
        <div class="imafraidijustbluemyself">
        </div>
    </div>
    <div class="article-cover" style="background-image: url('{{ app.resource(article.coverFilename) }}');">
        <div class="content">
            <h1 class="title">{{ article.title }}</h1>
        </div>
    </div>

    <div class="main">
        <nav class="nav">
            <div class="frame -articlenav">
                <ul class="list">
                    <li class="item">
                        <a class="link">Présentation</a>
                    </li>
                    <li class="item">
                        <a class="link">Test explicatif</a>
                    </li>
                    <li class="item">
                        <a class="link">Galerie d’images</a>
                    </li>
                    <li class="item">
                        <a class="link">Résumé et notes</a>
                    </li>
                </ul>
            </div>
            <a href="#" class="std-button -upper -white">
                <div class="text">
                    <span class="bold">Comment installer un mod</span>
                </div>
            </a>
            <div class="frame -related">
                <h2 class="heading">Tests et articles similaires</h2>
                <ul class="list">
                    <li class="item">
                        <a class="link" href="#">
                            <img alt="{{ article.title }}" class="image" src="{{ app.resource(article.coverFilename) }}">
                            {{ article.title }}
                    </li>
                    <li class="item">
                        <a class="std-button -sm -transparent" href="#">Voir plus de tests</a>
                    </li>
                    <li class="item">
                        <a class="std-button -sm -transparent" href="#">Voir plus d’actualité</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="content -review">
            {% if article.isReview %}
                <dl class="std-metadata">
                    <div class="item">
                        <dt class="term">Jeu :</dt>
                        <dd class="def">{{ article.storedReview.storedPlayable.name }}</dd>
                    </div>
                    <div class="item">
                        <dt class="term">Développeur :</dt>
                        <dd class="def">{% for a in authors %}{{ a.name }}{% if not loop.last %}, {% endif %}{% endfor %}</dd>
                    </div>
                    <div class="item">
                        <dt class="term">Date de sortie :</dt>
                        <dd class="def">{{ article.storedReview.storedPlayable.releaseDateTime|date('Y') }}</dd>
                    </div>
                </dl>
                <p class="p">{{ article.storedReview.body }}</p>
                <div class="std-review">
                    <div class="ratingcontainer">
                        <strong class="rating">{{ article.storedReview.rating }}</strong>
                    </div>
                    <h2 class="heading">{{ article.storedReview.storedPlayable.name }} : l’avis de l’équipe</h2>
                    <h3 class="subheading">Les plus</h3>
                    <div class="markdown -pros">
                        {% if article.storedReview.pros %}{{ app.mk.format(article.storedReview.pros)|raw }}{% else %}Rien à afficher.{% endif %}
                    </div>
                    <h3 class="subheading">Les moins</h3>
                    <div class="markdown -cons">
                        {% if article.storedReview.cons %}{{ app.mk.format(article.storedReview.cons)|raw }}{% else %}Rien à afficher.{% endif %}
                    </div>
                    <div class="relatedlinks">
                        <a class="std-button -sm -white" href="#">
                            <div class="text">
                                <span class="bold">Page de téléchargement ModDB</span>
                            </div>
                        </a>
                        <a class="std-button -sm -blue" href="#">
                            <div class="text">Voir plus de tests</div>
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="content">
            {{ app.mk.format(article.content)|raw }}
        </div>
    </div>
</article>

{% endblock %}