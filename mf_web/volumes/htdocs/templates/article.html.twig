{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<form autocomplete="on" enctype="multipart/form-data" method="post">
    <div class="form-row">
        <label class="label" for="p-id">ID</label>
        <input id="p-id" name="p_id" value="{% if article %}{{ article['p_id'] }}{% endif %}">
    </div>
    <div class="form-row">
        <label class="label" for="p-title">Titre</label>
        <input id="p-title" name="p_title" value="{% if article %}{{ article['p_title'] }}{% endif %}">
    </div>
    <div class="form-row">
        <label class="label" for="p-cover-filename">Couverture</label>
        <input accept="image/*" id="p-cover-filename" name="p_cover_filename" type="file" value="{% if article %}{{ article['p_cover_filename'] }}{% endif %}">
        {% if article %}<p>Couverture actuelle : {{ article['p_cover_filename'] }}.</p><img src="/public/uploaded/{{ article['p_cover_filename'] }}">{% endif %}
    </div>
    <div class="form-row">
        <input id="is-featured" name="p_is_featured" type="checkbox"{% if article %}{% if article['p_is_featured'] %} checked{% endif %}{% endif %}><label class="label" for="is-featured">Mettre à la une</label>
    </div>
    <textarea id="p-content" name="p_content">{% if article %}{{ article['p_content'] }}{% endif %}</textarea>
    <button type="submit">Poster</button>
    <input type="hidden" name="p_creation_datetime" value="{% if article %}{{ article['p_creation_datetime'] }}{% endif %}">
    <input type="hidden" name="p_last_update_datetime" value="{% if article %}{{ article['p_last_update_datetime'] }}{% endif %}">
    <input type="hidden" name="p_author" value="{% if article %}{{ article['p_author'] }}{% endif %}">
</form>
{% endblock %}