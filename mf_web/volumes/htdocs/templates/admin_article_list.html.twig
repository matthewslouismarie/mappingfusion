{% extends 'base.html.twig' %}

{% block title %}Gérer les articles{% endblock %}

{% block index %}<meta name="robots" content="noindex">{% endblock %}

{% block bodyContent %}
<h1 class="_h1">Gestion des articles</h1>

<div class="box">
    <a class="std-button" href="{{ app.router.generateUrl('manage-article') }}">Créer un nouvel article</a>
</div>

<div class="box">
    <ul class="std-list">
        {% for a in articles %}
        <li class="item">
            <a class="std-link" href="{{ app.router.generateUrl('manage-article', {id: a.id}) }}">{{ a.title }}</a>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}