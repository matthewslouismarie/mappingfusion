{% extends 'base.html.twig' %}

{% block bodyContent %}
<h1 class="_h1">{{ page.name }}</h1>

<a class="std-button _std" href="{{ app.router.generateUrl('admin/categories') }}">Créer une nouvelle catégorie</a>

<ul class="std-list _std">
    {% for c in categories %}
    <li class="item">
        <a class="std-link" href="{{ app.router.generateUrl('admin/categories', {id: c.id}) }}">{{ c.name }}</a>
    </li>
    {% endfor %}
</ul>
{% endblock %}