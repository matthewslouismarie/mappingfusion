{% extends 'base.html.twig' %}

{% block bodyContent %}

{% if chapter.articles %}
<div class="form-row">
    <a class="std-button -big" href="{{ app.router.generateUrl('admin-index-chapitre', [chapter.id]) }}">Ajouter un article</a>
</div>
<ul>
    {% for a in chapter.articles %}
    <li class="item">
        <a class="std-link" href="">{{ a.title }}</a>
    {% endfor %}
</ul>

{% endif %}
{% endblock %}